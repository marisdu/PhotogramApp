<h1> Marisdu's Photos </h1>

<div class="posts-wrapper row">
    <% @posts.each do |post| %>
        <div class="post">
            <div class="post-head">
                <div class="name">Mariana R. Meirelles</div>
            </div> 
            
            <div class="image center-block">
                <%= link_to (image_tag post.image.url(:medium)), post_path(post) %>                 
            </div>
            
            <div class="caption">
                <%= post.caption %>                
            </div>
        </div>
    <% end %>
</div>


